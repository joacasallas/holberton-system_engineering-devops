#!/usr/bin/env bash
# Configure Nginx server so that /redirect_me is redirecting to “301 Moved Permanently”
apt-get -y update
apt-get -y install nginx
ufw allow 'Nginx HTTP'
echo 'Hello World!' > /var/www/html/index.nginx-debian.html
sudo sed -i /var/www/html/index.nginx-debian.html  redirect 301 /var/www/html/index.nginx-debian.html http://www.ejemplo.es/redirect_me
sudo service nginx restart
