#!/usr/bin/env bash
# Configure Nginx server so that /redirect_me is redirecting to “301 Moved Permanently”
apt-get -y update
apt-get -y install nginx
ufw allow 'Nginx HTTP'
echo 'Hello World!' > /var/www/html/index.nginx-debian.html
service nginx start
old = /var/www/html/index.nginx-debian.html
new = http://www.ejemplo.es/redirect_me
sudo sed -i old  redirect 301 old new
sudo service nginx reload
